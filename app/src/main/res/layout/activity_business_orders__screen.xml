<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusable="true" android:focusableInTouchMode="true"
    tools:context="com.example.zakiva.tworder.business_orders__screen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG OUT"
        android:id="@+id/logOutBusinessButton"
        android:onClick="OnLogOutClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createNewOrder"
        android:text="Create New Order"
        android:textColor="#FFF"
        android:background="#00F"
        android:onClick="createNewOrderClick"
        android:layout_below="@+id/logOutBusinessButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ExpandableListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/expandableList"
        android:layout_below="@+id/createNewOrder"
        android:layout_marginTop="10dp"
        android:transcriptMode="disabled"
        android:cacheColorHint="#00000000"
        android:listSelector="@android:color/transparent"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="history"
        android:id="@+id/button5"
        android:nestedScrollingEnabled="true"
        android:onClick="history_clicked"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/createNewOrder" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="customers"
        android:id="@+id/button6"
        android:layout_above="@+id/createNewOrder"
        android:layout_centerHorizontal="true"
        android:onClick="customers_clicked" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/button5"
        android:layout_toRightOf="@+id/button6"
        android:layout_toLeftOf="@+id/logOutBusinessButton"
        android:layout_toStartOf="@+id/logOutBusinessButton" />


</RelativeLayout>
